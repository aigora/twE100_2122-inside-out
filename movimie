#include <stdio.h>
#include <stdlib.h>
#define F 20
#define C 20

void imprime_matriz(char matriz[F][C]);

int main()
{
    int i, t, j, k=1, q=1, aux1=5, aux2=5;
    char l;
    char matriz [F][C];
    

    for (t = 0; t < 10000; t++)
    {
        printf("\033[2J\033[1;1H");
        imprime_matriz(matriz);
        
        scanf("%c", &l); 
       
        if (l=='s')
        {   k=aux1;
            matriz[k+1][aux2]='*';
            matriz[k][aux2]=' ';
            aux1=k+1;
        }
        else if (l=='w')
        {
            k=aux1;
            matriz[k-1][aux2]='*';
            matriz[k][aux2]=' ';
            aux1=k-1;
        }
        else if (l=='d')
        {
            q=aux2;
            matriz[aux1][q+1]='*';
            matriz[aux1][q]=' ';
            aux2=q+1;
        }
        else if (l=='a')
        {
            q=aux2;
            matriz[aux1][q-1]='*';
             matriz[aux1][q]=' ';
            aux2=q-1;
        }
    }
    return 0;
}

void imprime_matriz(char matriz[F][C])
{
    int i, j;
    for ( i = 0; i < F; i++)
        {
            for ( j = 0; j < C; j++)
            {
                if (matriz[i][j]=='*')
                {
                    printf("%c", matriz[i][j]);
                }
                else
                {
                    if (i==0 || i==F-1)
                    {
                        matriz[i][j]='-';
                        printf("%c", matriz[i][j]);
                    }
                    else if (j==0 || j==C-1)
                    {
                        matriz[i][j]='|';
                        printf("%c", matriz[i][j]);
                    }
                    else
                    {
                    matriz[i][j]=' ';
                    printf("%c", matriz[i][j]);
                    }
                }
            }  
            printf("\n");
        }
}
